{
  "name": "argus-bot",
  "module": "src/index.ts",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "bun run src/index.ts | jq",
    "dev": "bun run --hot src/index.ts | jq",
    "build": "bun build src/index.ts --outdir dist --target bun --env disable --sourcemap",
    "fmt": "prettier --write src/**/*.ts",
    "fmt:check": "prettier --check src/**/*.ts",
    "lint": "eslint --cache --fix src/**/*.ts",
    "lint:check": "eslint --cache src/**/*.ts",
    "type-check": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.1",
    "@types/bun": "latest",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "semantic-release": "^25.0.1",
    "typescript-eslint": "^8.46.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "discord.js": "^14.24.2",
    "pino": "^10.1.0"
  }
}
